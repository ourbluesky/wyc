        <Button Style="{DynamicResource game_copy_ButtonStyle}" x:Name="GameButton_copy"  Content="Button" HorizontalAlignment="Left" Margin="618,307,179,77" Height="160" Width="160" VerticalAlignment="Top"  Background="#FF050000" Visibility="Hidden"/>

