      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
	Title="QuesGameSeclectPage">

    <Grid>

        <Image x:Name="background" Source="..\Picture\bg.png" Margin="0,-100,0,-100" />
        <Image x:Name="police" Source="..\Picture\做场景.png" Margin="72,97,374,157" />
